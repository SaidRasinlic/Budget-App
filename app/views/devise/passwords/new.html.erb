<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<section class="user-expenses">
  <div class="user__amount">
  <div class="user__title">Forgot your password?</div>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="user__option category-title">
      <ion-icon name="mail-outline"></ion-icon>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'option-text', placeholder: 'Email' %>
    </div>
    </div>
<%= f.submit 'Restart password', class: 'user__save' %> <% end %>
  <%= render "devise/shared/links" %>
</section>
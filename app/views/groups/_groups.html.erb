<div class="modal fade" id="deleteGroup" tabindex="-1" role="dialog" aria-labelledby="deleteGroup" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Delete Group</h5>
        <ion-icon name="arrow-back" class="settings-button" data-dismiss="modal" aria-label="Close"></ion-icon>
      </div>
      <div class="modal-body">
        <% @groups.each do |group| %>
        <li class="item">
          <div class="transaction-name">
            <!-- link to delete group -->
            <%= link_to group_path(group), method: :delete do %>
            <ion-icon name="trash-outline" class="transaction-img <%= group.icon %>" data-toggle="modal" data-target="#DeleteModal"></ion-icon>
            <% end %>
            <p class="transaction-name__text"><%= group.name %></p>
          </div>
          <div class="transaction-amount">
            <p class="transaction-amount__text">$<%= group.total_amount %></p>
          </div>
        </li>
        <br />
        <% end %>
      </div>
    </div>
  </div>
</div>